{
  "manifest_version": 2,
  "name": "Hyprlink",
  "version": "1.0.0",
  "description": "Redirect hw:// protocol links to your Hyperware node",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "hyprlink@hyperware.ai"
    }
  }
}
